{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "baseUrl": "src",
    "paths": {
      "@app-env/*": [
        "environments/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@app-directives/*": [
        "app/_directives/*"
      ],
      "@app-guards/*": [
        "app/_guards/*"
      ],
      "@app-helpers/*": [
        "app/_helpers/*"
      ],
      "@app-models/*": [
        "app/_models/*"
      ],
      "@app-services/*": [
        "app/_services/*"
      ],
      "@app-shared/*": [
        "app/_shared/*"
      ],
      "@app-root/*": [
        "app/root/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
